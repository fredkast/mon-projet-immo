{% extends 'base.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    <h1>Devis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_maison</th>
                <th>Type_usage</th>
                <th>Surface</th>
                <th>Budget</th>
                <th>Nombre_etages</th>
                <th>Nombre_chambres</th>
                <th>Garage</th>
                <th>Exterieur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td>{{ devi.id }}</td>
                <td>{{ devi.typeMaison }}</td>
                <td>{{ devi.typeUsage }}</td>
                <td>{{ devi.surface }}</td>
                <td>{{ devi.budget }}</td>
                <td>{{ devi.nombreEtages }}</td>
                <td>{{ devi.nombreChambres }}</td>
                <td>{{ devi.garage ? 'Yes' : 'No' }}</td>
                <td>{{ devi.exterieur ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('devis_show', {'id': devi.id}) }}">show</a>
                    <a href="{{ path('devis_edit', {'id': devi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('devis_new') }}">Create new</a>
{% endblock %}
